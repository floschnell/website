.body
    margin: 0 50px 50px 75px
    flex-grow: 1
    blockquote
        margin: 0
        padding-left: 0.5em
        border-left: 0.5em solid lighten(#999, 30)
    mark
        background-color: lighten(#00979d, 62)
    img
        border: 4px solid #ccc
        padding: 4px
        margin: 4px auto
        display: block
        clear: both
    a
        color: darken(#00979d, 10)
        text-decoration: underline

    h1,h2,h3
        clear: both

    figure
        padding: 4px
        border: 4px solid #ccc
        margin: 4px auto
        margin-bottom: 2em
        background-color: #ebebeb
        object-fit: cover
        display: flex
        flex-wrap: wrap
        justify-content: space-around
        align-items: center;
        align-content: center;
        img
            border: none
            box-sizing: border-box
            max-width: 100%
            margin: 0
        figcaption
            padding: 4px
            color: #333
            font-style: italic
            width: 100%

    :global(.float-left)
        img
            float: left
            margin-right: 10px
    :global(.float-right)
        float: right
    :global(.catalog)
        flex: 1
        display: flex
        justify-content: space-between
        flex-wrap: wrap

.loadingBanner
    opacity: 1
    transition: all 1s linear
    transition-delay: 0.5s;
    position: absolute
    top: 0
    left: 0
    bottom: 0
    right: 0
    margin-top: 240px
    pointer-events: none

.message
    text-align: center

.hidden
    opacity: 0
    transition: none

.spinner 
    width: 40px
    height: 40px
    margin: 40px auto
    background-color: #333
    border-radius: 100%
    animation: sk-scaleout 1.0s infinite ease-in-out;

@keyframes sk-scaleout
    0% { 
        transform: scale(0);
    } 100% {
        transform: scale(1.0);
        opacity: 0;
    }