.container
    position: relative;
    margin-top: 40px;
    left: -83px;
    margin-bottom: 20px;

.profile
    display: inline-block;
    position: relative;
    margin-right: 40px;
    vertical-align: middle;

.profile:after
    content: '';
    display: inline-block;
    position: absolute;
    z-index: 1;
    background-color: #aaa;
    width: 150px;
    height: 150px;
    left: -5px;
    top: -5px;
    border-radius: 50%;
    border: 5px solid #aaa;
    transition: transform 0.3s cubic-bezier(0.175, 1.885, 0.32, 1.275);

.photo
    z-index: 3;
    position: relative;
    border-radius: 155px;
    border: 5px solid #fff;
    box-sizing: border-box;
    background-color: #fff;
    width: 150px;
    height: 150px;
    transition: transform 0.3s cubic-bezier(0.175, 1.885, 0.32, 1.275);

.profile:hover:after
    transform: scale(1.1)

.profile:hover
    .photo
        transform: scale(1.1)

.title
    display: inline-flex;
    flex-direction: column;

.name
    font-size: 40px;
    font-weight: 700;

.job
    font-size: 25px;
    color: #666;