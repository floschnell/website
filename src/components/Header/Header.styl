.container
    position: relative
    left: -88px
    height: 200px
    display: flex
    z-index: 1
    align-items: center
    flex-shrink: 0

.dotContainer
    position: relative
    width: 150px
    height: 150px
    flex-shrink: 0

.dot
    position: absolute
    width: 150px
    height: 150px
    border-radius: 155px
    border: 5px solid white
    box-sizing: border-box
    background-color: white

.dotShadow
    position: absolute
    width: 78px
    height: 160px
    overflow: hidden
    top: -5px
    left: 84px

.dotShadow::after
    content: ''
    display: block
    position: absolute
    width: 150px
    height: 150px
    border: 5px solid #aaa
    top: 0
    left: -89px
    border-radius: 150px
    background-color: #aaa
    z-index: -1

.head
    display: flex
    margin-left: 30px
    flex-direction: column
    justify-content: center

.title
    font-size: 40px
    font-weight: bold

.subtitle
    font-size: 25px
    color: #666

.languages
    flex-grow: 1
    display: flex
    justify-content: flex-end