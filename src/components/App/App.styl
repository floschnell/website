html
    background-color: white
    padding: 0
    margin: 0
    font-family: 'Bitter', serif;

body
    margin: 0
    padding: 0
    overflow-y: scroll
    overflow-x: hidden

.container
    margin: 0;
    padding: 0;
    display: grid;
    grid-template-columns: minmax(185px, 15%) minmax(550px, 1fr) minmax(160px, 15%);
    grid-template-rows: minmax(100vh, 1fr);
    grid-auto-flow: row;
    grid-auto-rows: 1fr;

.main
    position: relative;
    background-color: white;
    display: flex;
    flex-direction: column;

.left
    position: relative

.right
    display: flex